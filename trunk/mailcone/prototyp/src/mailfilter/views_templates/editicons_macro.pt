<metal:subblock define-macro="onlyAdd">
	<a class="#"
	   tal:attributes="href python:view.url(item, addUrl);
	   				   class addClass;">
		<img src="#"
			 class="icon"
			 title="add"
			 tal:attributes="src string:${view/application_url}/fanstatic/mailfilter/add-icon.jpg;
			 			     title addTitle" />
	</a>
</metal:subblock>

<metal:subblock define-macro="onlyLoadTemplate">
	<a class="#"
	   tal:attributes="href python:view.url(item, loadUrl);
	   				   class loadClass;">
		<img src="#"
			 class="icon"
