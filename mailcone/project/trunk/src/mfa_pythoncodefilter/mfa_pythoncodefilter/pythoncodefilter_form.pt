<html>

<body class="add">
<form action="." tal:attributes="action request/URL" method="post"
      class="edit-form filtertable" enctype="multipart/form-data">

  <h1 i18n:translate=""
    tal:condition="view/label"
    tal:content="view/label">Label</h1>

  <div class="form-status"
    tal:define="status view/status"
    tal:condition="status">

    <div i18n:translate="" tal:content="view/status">
      Form status summary
    </div>

    <ul class="errors" tal:condition="view/errors">
      <li tal:repeat="error view/error_views">
         <span tal:replace="structure error">Error Type</span>
      </li>
    </ul>
  </div>

  <table class="form-fields">
    <tbody>
        <tr>
	      <tal:block repeat="widget view/widgets">
	          <td class="limitedWidth"
			  	  tal:content="structure widget/context/description" />
			  
			  <td class="field">
	            <div class="widget" tal:content="structure widget">
	              <input type="text" />
	            </div>
	            <div class="error" tal:condition="widget/error">
	              <span tal:replace="structure widget/error">error</span>
	            </div>
	            
	          </td>
	      </tal:block>
        
          <td id="actionsView">
		  	<span class="actionButtons" tal:condition="view/availableActions">
				<input tal:repeat="action view/actions"
		        	   tal:replace="structure action/render"
		           	   />
		   	</span>
		  </td>
        </tr>
    </tbody>
  </table>

  
</form>

</body>
</html>

